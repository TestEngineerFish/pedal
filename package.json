{
  "name": "pedal",
  "displayName": "pedal",
  "description": "flutter plug extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "pedal.helloWorld",
      "title": "Hello World"
    },
    {
      "command": "pedal.cleanCache",
      "title": "Clean"
    }
  ],
    "configuration": [
      {
        "title": "pedal",
        "properties": {
          "pedal.customPath" : {
            "type" : "string",
            "default": "",
            "description": "Flutter depend path cache root path"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "pedal",
        "aliases": ["踏板"],
        "extensions": [
          ".sam"
        ]
      }
    ],
    "menus": {
      "editor/title": [{
        "when": "editorFocus",
        "command": "pedal.helloWorld",
        "alt": "",
        "group": "navigation"
      },
      {
        "when": "editorFocus",
        "command": "pedal.cleanCache",
        "alt": "",
        "group": "navigation"
      }]
    },
    "keybindings": [
      {
        "key": "cmd+shift+0",
        "command": "pedal.helloWorld"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
